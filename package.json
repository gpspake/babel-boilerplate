{
  "name": "babel-boilerplate",
  "version": "1.0.0",
  "description": "Simple Babel Boilerplate",
  "main": "index.js",
  "author": "George Spake <gpspake@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "cross-env NODE_ENV=production babel src -d dist",
    "build:dev": "babel src -d dist --watch",
    "start": "node ./dist/index.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.44",
    "@babel/core": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "babel-preset-minify": "^0.4.0",
    "cross-env": "^5.1.4",
    "rimraf": "^2.6.2"
  }
}
